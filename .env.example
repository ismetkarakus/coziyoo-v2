# ============================================
# Coziyoo - Centralized Environment Configuration
# WARNING: Update all placeholder values!
# ============================================

# --------------------------------------------
# Application Settings
# --------------------------------------------
NODE_ENV=development
APP_NAME=Coziyoo

# --------------------------------------------
# API Server (apps/api)
# --------------------------------------------
API_PORT=3000
API_HOST=127.0.0.1
API_START_CMD="node dist/src/server.js"

# JWT Secrets (CHANGE THESE!)
APP_JWT_SECRET=change_me_app_jwt_secret_min_32_chars
ADMIN_JWT_SECRET=change_me_admin_jwt_secret_min_32_chars

# CORS
API_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# --------------------------------------------
# Admin Panel (apps/admin)
# --------------------------------------------
ADMIN_PORT=8000
VITE_API_BASE_URL=http://localhost:3000

# --------------------------------------------
# Database (PostgreSQL)
# --------------------------------------------
PGHOST=127.0.0.1
PGPORT=5432
PGUSER=coziyoo
PGPASSWORD=change_me_db_password
PGDATABASE=coziyoo
DATABASE_URL=postgresql://${PGUSER}:${PGPASSWORD}@${PGHOST}:${PGPORT}/${PGDATABASE}

# --------------------------------------------
# External Services
# --------------------------------------------
# Payment Webhook
PAYMENT_WEBHOOK_SECRET=change_me_webhook_secret

# AI/ML Services External API
AI_SERVER_SHARED_SECRET=change_me_ai_secret
OLLAMA_BASE_URL=https://ollama.remote.com:11434

# Text-to-Speech
TTS_API_KEY=change_me_tts_key

# Speech-to-Text
SPEECH_TO_TEXT_API_KEY=change_me_stt_key

# N8N Automation
N8N_API_KEY=change_me_n8n_key
N8N_BASE_URL=https://n8n.remote.com:5678

# --------------------------------------------
# LiveKit (if used)
# --------------------------------------------
LIVEKIT_API_KEY=change_me_livekit_key
LIVEKIT_API_SECRET=change_me_livekit_secret
LIVEKIT_URL=wss://livekit.coziyoo.com

# --------------------------------------------
# Deployment Settings
# --------------------------------------------
REPO_ROOT=/opt/coziyoo
DEPLOY_BRANCH=main

# Domains (for production)
ADMIN_DOMAIN=admin.coziyoo.com
API_DOMAIN=api.coziyoo.com

# --------------------------------------------
# Seed Data
# --------------------------------------------
SEED_ADMIN_EMAIL=admin@coziyoo.com
SEED_ADMIN_PASSWORD=change_me_admin_password
