{
  "name": "coziyoo-v2",
  "version": "1.0.0",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:all": "concurrently -k -n api,admin -c cyan,magenta \"npm run dev\" \"npm run admin:dev\"",
    "dev:all:mobile": "concurrently --raw -k \"npm run dev\" \"npm run assistant:dev\"",
    "dev:all:web-assistant": "concurrently --raw -k \"npm run dev\" \"npm run assistant:web\"",
    "all": "concurrently --raw -k \"npm run dev\" \"npm run assistant:web\" \"npm run admin:dev\"",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/server.js",
    "db:test": "tsx scripts/test-db.ts",
    "db:reset-init": "tsx scripts/reset-and-init-db.ts",
    "seed:admin": "tsx scripts/seed-admin.ts",
    "outbox:process": "tsx scripts/process-outbox.ts",
    "retention:run": "tsx scripts/run-retention.ts",
    "openapi:validate": "tsx scripts/validate-openapi.ts",
    "contract:test": "npm run openapi:validate",
    "test:unit": "vitest run",
    "test:all": "npm run test:unit && npm run contract:test && npm run test:smoke-docs && npm run test:smoke-admin-metadata && npm run test:smoke-admin-users && npm run test:smoke-auth && npm run test:smoke-orders && npm run test:smoke-payments && npm run test:smoke-lots && npm run test:smoke-compliance-allergen && npm run test:smoke-finance",
    "ci:check": "npm run build && npm run test:unit && npm run contract:test",
    "test:smoke-auth": "tsx scripts/smoke-auth.ts",
    "test:smoke-orders": "tsx scripts/smoke-orders.ts",
    "test:smoke-payments": "tsx scripts/smoke-payments.ts",
    "test:smoke-compliance-allergen": "tsx scripts/smoke-compliance-allergen.ts",
    "test:smoke-finance": "tsx scripts/smoke-finance.ts",
    "test:smoke-lots": "tsx scripts/smoke-lots.ts",
    "test:smoke-admin-metadata": "tsx scripts/smoke-admin-metadata.ts",
    "test:smoke-docs": "tsx scripts/smoke-docs.ts",
    "test:smoke-admin-users": "tsx scripts/smoke-admin-user-management.ts",
    "admin:dev": "npm --prefix admin-panel run dev",
    "admin:build": "npm --prefix admin-panel run build",
    "assistant:dev": "npm --prefix buyer-assistant run start",
    "assistant:web": "npm --prefix buyer-assistant run web",
    "assistant:web:clear": "npm --prefix buyer-assistant exec expo start --web --clear",
    "assistant:ios": "npm --prefix buyer-assistant run ios",
    "assistant:android": "npm --prefix buyer-assistant run android"
    ,
    "assistant:ios:devbuild": "cd buyer-assistant && npx expo run:ios",
    "assistant:android:devbuild": "cd buyer-assistant && npx expo run:android"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "argon2": "^0.44.0",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "yaml": "^2.8.2"
  }
}
