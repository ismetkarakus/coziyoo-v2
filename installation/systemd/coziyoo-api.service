[Unit]
Description=Coziyoo FastAPI Service
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/coziyoo/api
EnvironmentFile=/opt/coziyoo/api/.env
ExecStart=/opt/coziyoo/api/.venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000 --workers 2
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
