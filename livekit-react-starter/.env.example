# Backend API base used by /api/connection-details proxy
API_BASE_URL=https://api.example.com

# Optional client override (only needed if you call API directly from browser)
NEXT_PUBLIC_API_BASE_URL=https://api.example.com

# TTS proxy (used by /api/starter/tts-synthesize)
TTS_BASE_URL=https://tts.example.com
TTS_SYNTH_PATH=/tts
TTS_LANGUAGE_DEFAULT=tr
TTS_TIMEOUT_MS=30000
# Optional remote speaker wav file (publicly reachable URL)
TTS_SPEAKER_WAV_URL=

# Agent dispatch (https://docs.livekit.io/agents/server/agent-dispatch)
# Leave AGENT_NAME blank to enable automatic dispatch
# Provide an agent name to enable explicit dispatch
AGENT_NAME=

# Internally used environment variables
NEXT_PUBLIC_APP_CONFIG_ENDPOINT=
SANDBOX_ID=
